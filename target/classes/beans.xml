<?xml version = "1.0" encoding = "UTF-8" ?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- bean definitions here -->
    <bean id="actor" class="com.stackroute.domain.Actor" scope="singleton">
        <!--        Constructor-Injection-->
        <constructor-arg type="java.lang.String" value="Sanju" />
        <constructor-arg type="java.lang.String" value="Male" />
        <constructor-arg type="int" value="56" />
    </bean>
    <bean id="actor1" class="com.stackroute.domain.Actor" scope="singleton">
        <constructor-arg name="name" value="Shahrukh" />
        <constructor-arg name="gender" value="Male" />
        <constructor-arg name="age" value="52" />
    </bean>
    <bean id="actor2" class="com.stackroute.domain.Actor" scope="singleton">
        <constructor-arg index="0" value="Hrithik" />
        <constructor-arg index="1" value="Male" />
        <constructor-arg index="2" value="45" />
    </bean>


    <bean id="movie" class="com.stackroute.domain.Movie" autowire="byName" scope="singleton" >
        <constructor-arg index="0" ref="actor" />
        <property name="movieName" value="Kite" />
        <property name="genre" value="Romance" />
    </bean>
    <bean id="movie1" class="com.stackroute.domain.Movie" scope="prototype">
        <constructor-arg index="0" value="Avengers" />
        <constructor-arg index="1" value="Action" />
        <constructor-arg ref="actor1" />
    </bean>
</beans>